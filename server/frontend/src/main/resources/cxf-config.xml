<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:jaxws="http://cxf.apache.org/jaxws"
        xmlns:jaxrs="http://cxf.apache.org/jaxrs"
        xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://cxf.apache.org/jaxws
            http://cxf.apache.org/schemas/jaxws.xsd
            http://cxf.apache.org/jaxrs
            http://cxf.apache.org/schemas/jaxrs.xsd"
>
    <bean id="jsonProvider" class="com.fasterxml.jackson.jaxrs.json.JacksonJsonProvider"/>

    <!-- SOAP beans -->
    <bean id="soapAuth" class="cd.project.frontend.soap.AuthenticationImpl" />

    <!-- SOAP Endpoints -->
    <jaxws:server id="soap" address="/soap">
        <jaxws:serviceBean>
            <ref bean="soapAuth" />
        </jaxws:serviceBean>
    </jaxws:server>

    <!-- REST Beans -->
    <bean id="restAuth" class="cd.project.frontend.rest.AuthenticationImpl" />

    <!-- REST Config/Endpoints -->
    <jaxrs:server id="rest" address="/rest">
        <jaxrs:serviceBeans>
            <ref bean="restAuth" />
        </jaxrs:serviceBeans>
    </jaxrs:server>
</beans>
