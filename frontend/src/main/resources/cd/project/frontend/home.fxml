<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="300.0" minWidth="400.0" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #434343;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cd.project.frontend.HomeController">
   <children>
      <MenuBar style="-fx-background-color: #636363;">
         <menus>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About MyHelloApp" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label text="CD Application" textAlignment="CENTER" textFill="#14c777">
         <font>
            <Font name="System Bold" size="30.0" />
         </font>
         <VBox.margin>
            <Insets top="120.0" />
         </VBox.margin>
      </Label>
      <GridPane maxWidth="300.0" prefHeight="115.0" prefWidth="222.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="Username" textFill="#14c777" />
            <Label text="Password" textFill="#14c777" GridPane.rowIndex="2" />
            <TextField fx:id="username" GridPane.rowIndex="1" />
            <PasswordField fx:id="password" GridPane.rowIndex="3" />
         </children>
         <VBox.margin>
            <Insets top="50.0" />
         </VBox.margin>
      </GridPane>
      <Button fx:id="submit" mnemonicParsing="false" onAction="#handleSubmit" style="-fx-background-color: #14c777;" text="Button">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="testLabel" text="Label" textFill="#303030">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Label>
   </children>
</VBox>
